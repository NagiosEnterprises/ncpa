
# Create services

# ncpa_listener
svcbundle -s service-name=site/ncpa_listener \
      -s start-method="/usr/local/ncpa/ncpa_listener" \
      -s stop-method="kill -F /usr/local/ncpa/var/run/ncpa_listener.pid"

# ncpa_passive
svcbundle -s service-name=site/ncpa_passive \
      -s start-method="/usr/local/ncpa/ncpa_listener" \
      -s stop-method="kill -F /usr/local/ncpa/var/run/ncpa_listener.pid"
